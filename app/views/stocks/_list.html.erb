<% current_user.stocks.each do |stock| %>
<%= stock.ticker %>
<% end %>

<table class="table table-striped" >
	<thead>
		<tr>
			<th>Name</th>
			<th>Symbol</th>
			<th>Current Price</th>
			<% if @user.id == current_user.id %>
				<th>Actions</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
			<% @user_stocks.each do |user_stock| %>
			<tr>
				<th><%= user_stock.name %></th>
				<th><%= user_stock.ticker %></th>
				<th><%= user_stock.last_price %></th>
				<% if @user.id == current_user.id %>
					<th><%= link_to "Untrack this stock", user_stock_path(user_stock), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></th>
				<% end %>
			</tr>
			<% end %>
	</tbody>
<table>